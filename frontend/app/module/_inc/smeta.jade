meta(charset='UTF-8')
- tt = title || i18.si('siteName') || c.name
title= tt
meta(content= description || i18.ii('description'), name='description')
meta(content= keyword || i18.ii('keyword'), name='keywords')

meta(property='og:title', content='#{tt}')
meta(property='og:site_name', content='#{tt}')
meta(property='og:description', content= i18.ii('description'))
//link(rel='shortcut icon', href='', type='image/x-icon')

if noCache
    meta(http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate")
    meta(http-equiv="Pragma" content="no-cache")
    meta(http-equiv="Expires" content="0")

if expires
    meta(context='86400', http-equiv='expires')

meta(name='viewport', content='width=device-width, initial-scale=1.0,user-scalable=no')

meta(name='format-detection', content='telephone=no')
meta(name='format-detection', content='email=no')


meta(name='apple-touch-fullscreen', content='YES')
meta(name='msapplication-tap-highlight', content='telephone=no')
meta(name='apple-mobile-web-app-capable', content='yes')
meta(name='apple-mobile-web-app-status-bar-style', content='black')

if index == 'index' && c.bdVerifyStr
    !=c.bdVerifyStr

block headRes

link(rel='stylesheet', type='text/css', href='#{libPath}#{main || "main"}.css?#{_ts}', media='all')

if main == 'main'
    noscript
        meta(http-equiv='refresh', content='0;url=/nojs.html')
    meta(http-equiv='X-UA-Compatible', content='Chrome=1,IE=edge')
    meta(http-equiv='X-UA-Compatible', content='IE=9')
    link(rel='alternate', type='application/rss+xml', title='#{title} RSS Feed', href='/feeds.xml')
