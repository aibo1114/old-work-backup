                position: absolute;
                font-size: 14px;
                display: none;
                top: 80px;
            }

            .box-nb li {
                line-height: 30px;
            }

            .box-abs {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                font-size: 14px;
                z-index: 2;
                text-align: center;
            }

            .text-prop {
                width: 600px;
                text-align: left;
                line-height: 1.8em;
                font-size: 12px;
                color: #fad05e;
                text-indent: 2em;
                position: absolute;
                left: 50%;
                bottom: 0;
                margin-left: -180px;
            }

            .title-main {
                display: inline-block;
                width: 10.3%;
            }

            .table-reward {
                display: none;
                width: 600px;
                border-radius: 6px;
                box-shadow: 0 0 12px #151040;
                border-bottom: 1px solid #f1b95e;
                background: -webkit-linear-gradient(top, #ffca70, #fdb547);
                background: -moz-linear-gradient(top, #ffca70, #fdb547);
                background: -moz-linear-gradient(top, #ffca70, #fdb547);
            }

            .table-reward tr {
                padding: 0 20px;
                border-radius: 6px;
            }

            .table-reward td {
                padding: 10px 0;
                border-top: 1px solid #f1b95e;
                border-right: 1px solid #f1b95e;
            }

            .tt-table {
                line-height: 2.3em;
                color: #734714;
                font-size: 12px;
            }

            .text-table {
                line-height: 1.6em;
                color: #2a2162;
                font-size: 14px;
            }

            .single-text-table {
                line-height: 3.2em;
            }

            .intro-table {
                text-align:center;
                background: #fdb548;
                line-height: 2.6em;
                color: #2a2162;
                display: none;
                font-size: 14px;
                width: 600px;
                margin: 10px auto 0;
                border-radius: 6px;
                font-weight: bold;
                box-shadow: 0 0 12px #151040;
            }

            .btn-active {
                display: none;
                position: absolute;
                z-index: 2;
                color: white;
                text-decoration: none;
                font-size: 1.3em;
                line-height: 1.5em;
                background: -webkit-linear-gradient(top, #6a2cc7, #4b1c91);
                background: -moz-linear-gradient(top, #6a2cc7, #4b1c91);
                background: -moz-linear-gradient(top, #6a2cc7, #4b1c91);
                border: 1px solid #c696ea;
                border-radius: 4px;
                box-shadow: 0 0 12px #9a2a2c;
                cursor: pointer;
            }

            .mt10 {
                margin-top: 10px;
            }

            .footer {
                padding: 0;
            }

            .tbs {
                font-size: 14px;;
                width: 600px;
                position: absolute;
                display: none;
                top: 50px;
                border-top: 1px solid #a091e6;
                border-left: 1px solid #a091e6;
            }

            .tbs td, th {
                text-align: center;
                border-right: 1px solid #a091e6;
                border-bottom: 1px solid #a091e6;
                width: 230px;
                padding: 0;
                background: #ae9ff4;
                height: 29px;
            }

