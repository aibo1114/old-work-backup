        script.
            var btn, btnleft, btntop, cWidth, imghd, imgwd, setCenter, sw;
            cWidth = document.body.clientWidth;
            setCenter = function (tag) {
                var h, left, w;
                w = tag.width();
                h = tag.height();
                left = (cWidth - w) / 2;
                return tag.css({
                    left: left + 'px'
                }).show();
            };
            sw = 0.50 * cWidth;
            $('.tbs').css('top', cWidth * 0.028);
            if (sw > 600) {
                $('.table-reward').width(sw);
                $('.intro-table').width(sw);
                $('.tbs').width(sw);
                $('.box-nb').width(sw);
            } else {
                $('.table-reward').show();
                $('.intro-table').show();
                $('.tbs').show();
                $('.box-nb').show();
            }
            $('.table-reward').show();
            setCenter($('.table-reward'));
            setCenter($('.intro-table'));
            setCenter($('.tbs'));
            setCenter($('.box-nb'));
            btn = $('.btn-active');
            imgwd = cWidth;
            imghd = cWidth * 400 / 1406;
            btnleft = imgwd * 575 / 1854;
            btntop = imghd * 275 / 528;
            btn.css({
                left: btnleft + 'px',
                top: btntop + 'px',
                height: imgwd / 30 + 'px',
                width: imgwd / 8 + 'px',
                'line-height': imgwd / 30 + 'px'
            }).show();
            $.getJSON('http://i.wan.liebao.cn/user/i?callback=?', {}).done(function (res) {
                if (res.code === 1) {
                    return $.ajax({
                        type: 'get',
                        url: 'http://pay1.wan.liebao.cn/index.php/pay/activity_btn',
                        dataType: 'jsonp',
                        jsonp: 'callback',
                        success: function (res) {
                            btn.text(res.btn_name);
                            if (res.method === 'jump') {
                                return btn.attr('href', res.btn_href);
                            } else if (res.method === 'jsonp') {
                                return btn.click(function () {
                                    return $.ajax({
                                        type: 'get',
                                        url: res.btn_href,
                                        dataType: 'jsonp',
                                        jsonp: 'callback',
                                        success: function (res) {
                                            return console.log(res);
                                        }
                                    });
                                });
                            }
                        }
                    });
                } else if (res.code === 2) {
                    btn.click = function () {
                        return Login.show();
                    };
                    return setTimeout(function () {
                        return Login.show();
                    }, 500);
                }
            });
            $.ajax({
                type: 'get',
                url: 'http://pay1.wan.liebao.cn/index.php/pay/activity_list',
                dataType: 'jsonp',
                jsonp: 'callback',
                success: function (res) {
                    var i, index, it, j, k, len, ref, results, tb;
                    tb = $('.tbs tbody');
                    for (i = j = 0, len = res.length; j < len; i = ++j) {
                        it = res[i];
                        tb.append("<tr><td>" + (i + 1) + "</td><td>" + it.un + "</td><td>" + it.mo + "</td></tr>");
                        index = i;
                    }
                    index++;
                    if (index < 10) {
                        results = [];
                        for (it = k = 1, ref = 10 - index; 1 <= ref ? k <= ref : k >= ref; it = 1 <= ref ? ++k : --k) {
                            results.push(tb.append("<tr><td></td><td></td><td></td></tr>"));
                        }
                        return results;
                    }
                }
            });