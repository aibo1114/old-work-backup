                ul.l-btn-header
                    li.li-btn-header
                        ul.l-more-header
                            each it in gamelist
                                li.li-more-header: a.link-more-header(href='http://vip.wan.liebao.cn/privilege/#{it.alias}',target='_blank')= it.gname
                        a.link-btn-header.more(href='javascript:void(0);') 更多游戏
                    li.li-btn-header: a.link-btn-header.plant(href='http://wan.liebao.cn') 返回平台

        .banner
            ul.l-btn-banner
                li.li-btn-banner.btn-game-gp: a.link-btn-banner(href='http://wan.liebao.cn/#{alias}',target='_blank') 开始游戏
                li.li-btn-banner.btn-open-gp: span.link-btn-banner(the-id='openBtn') 开通豹会员
        .main-gp
            block content
        +tip
        script(type='text/javascript',src='http://img.wan.ijinshan.com/vip/js/jquery.1.8.3.min.js')
        script(type='text/javascript',src='http://wan.liebao.cn/action/user_info.php?rt=5')
        script(type='text/javascript',src='http://image.wan.liebao.cn/www/js/lb.platform.base.js?v=20170828')
        script(type='text/javascript',src='../js/main.js')


