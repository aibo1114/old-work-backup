-var gamelist= [{gname:'传奇霸业',alias:'cqby'}, {gname:'神仙劫',alias:'sxj'}, {gname:'楚乔传',alias:'cqz'}, {gname:'攻沙',alias:'gs'}, {gname:'九天封神',alias:'jtfs'}, {gname:'三生三世十里桃花',alias:'ssss'}, {gname:'魔域永恒',alias:'myyh'}, {gname:'龙神契约',alias:'lsqy'}];
block variable

mixin panel(t,subt,que)
    .panel-gp&attributes(attributes)
        em.num-panel-gp Part#{que}
        .heading-panel-gp
            h2.title-panel-gp= t
            h3.subtitle-panel-gp= subt
        .body-panel-gp
            if block
                block
mixin gifts(title)
    .gifts-gp&attributes(attributes)
        .hd-gifts-gp
            h3.title-gifts-gp.icon-pkg= title
        .bd-gifts-gp
            if block
                block
        .ft-gifts-gp
            +receiveBtn(the-id='receiveBtn')

mixin tab(arr,sort)
    ul.l-tab-gp
        each it,i in arr
            -var cls='li-tab-gp';
            if i == 0
                -cls+=' hvr-tab-gp';
            li(class='#{cls}') #{it.tt}
    .content-tab-gp
        each it in arr
            .pane-tab-gp
                each item,ndx in it.content
                    .media-tab-gp
                        .abs-media-tab: img(src='images/gifts/#{sort}-#{it.tt}-#{ndx+1}-detail.png')
                        .img-media-tab: img(src='images/gifts/#{sort}-#{it.tt}-#{ndx+1}.jpg')
                        h4.name-media-tab= item

mixin table(dic,sort,stratum)
    //obj4stratum || arr4noStratum
    table.table-gp(cellpadding="0" cellspacing="0" border="0")
        tr
            each v,k in dic
                if stratum
                    th= k
                else
                    th: p.txt-th-gp= v
        tr
            each v,k in dic
                td
                    .media-td-gp
                        if stratum
                            .abs-media-td: img(src='images/gifts/#{sort}-#{k}-detail.png')
                            .img-media-td: img(src='images/gifts/#{sort}-#{k}.jpg')
                        else
                            .abs-media-td: img(src='images/gifts/#{sort}-#{k+1}-detail.png')
                            .img-media-td: img(src='images/gifts/#{sort}-#{k+1}.jpg')
                    if stratum
                        p= v

mixin moreList
    ul.l-more-gp
        li.li-more-gp.coupon
            h4.title-more-gp 优惠券特权
        li.li-more-gp.identity
            h4.title-more-gp 身份特权
        li.li-more-gp.birthday
            h4.title-more-gp 生日特权
        li.li-more-gp.activity
            h4.title-more-gp 活动特权
mixin leadList
    ul.l-lead-gp
        li.li-lead-gp.first-lead-gp
            .hd-lead-gp
                h4.title-lead-gp 步骤一
            .bd-lead-gp: p 点击桌面下的<br />“开通豹会员”按钮，<br />去开通页面。
        li.li-lead-gp
            .hd-lead-gp
                h4.title-lead-gp 步骤二
            .bd-lead-gp: p 选择开通类型和支付方式<br />完成支付。
        li.li-lead-gp
            .hd-lead-gp
                h4.title-lead-gp 步骤三
            .bd-lead-gp: p 开通完成，即可体验VIP<br />游戏特权。
mixin priList(arr)
    ul.l-pri-gp
        each it in arr
            li.li-pri-gp
                .media-pri-gp
                    .img-media-pri: img(src='./images/#{it.img}.png')
                    h4.title-media-pri= it.tt
                each item in it.content
                    p.desc-pri-gp= item

mixin fixNav(arr)
    ul.l-nav-gp
        each it in arr
            li.li-nav-gp: a.link-nav-gp(href='##{it.id}')= it.t
        li.top-nav-gp: a.link-nav-gp.icon-arrow(href='#gpHeader') TOP

mixin tip
    .mask-tip-gp
    .tip-gp
        .hd-tip-gp
            h5.title-hd-tip
            span.fork-hd-tip.btn-close-tip
        .bd-tip-gp
            p.txt-tip-gp 开通豹会员，即可享有海量VIP特权
            a.btn-tip-gp.btn-close-tip#receiveTipBtn(href='javascript:void(0);',target='_blank') 立即开通


//btns
mixin receiveBtn
    span.btn-receive-gp&attributes(attributes) 立即领取
mixin openBtn
    span.btn-open-gp(the-id='openBtn')&attributes(attributes) 开通豹会员


doctype html
html(lang='zh')
    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible",content="IE=EDGE,chrome=1")
        title #{gname}游戏特权
        link(href="http://wan.liebao.cn/favicon.ico",type="image/x-icon" rel="icon")
        link(href="http://wan.liebao.cn/favicon.ico",type="image/x-icon" rel="shortcut icon")
        link(type='text/css',rel='stylesheet',href='http://image.wan.liebao.cn/www/css/base.css')
        link(type='text/css', rel='stylesheet', href='style/index.css')
    body
        .header-gp#gpHeader
            .content-header
                h1.logo-gp: a(href='http://vip.wan.liebao.cn'): img(src='../images/logo.png')
                .status-login-header
                    p.n-login-header <span id='loginBtn'>登录</span><span class='line-login-header'>|</span><a href='http://wan.liebao.cn/user/register.html?bu=http%3A%2F%2Fvip.wan.liebao.cn%2F%2Findex.html'>注册</a>
