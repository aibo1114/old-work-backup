mixin mod(title,subtitle,large,tabHd)
    -var cls=''
    if large
        -cls='large'
    .mod-tj
        .hd-tj(class='#{cls}')
            if tabHd
                ul.l-hd-tj
                    li.li-hd-tj.charge: a.link-hd-tj(href='javascript:void(0);') 充值
                    li.li-hd-tj.regis: a.link-hd-tj(href='javascript:void(0);') 注册
            else
                h3.title-hd-tj= title
                if subtitle
                    h4.subtitle-hd-tj!=subtitle
        .bd-tj(class='#{cls}')&attributes(attributes)
            if block
                block

mixin list(arr)
    ul.l-tj
        each it in arr
            li.li-tj
                a.title-li-tj(href='#{it.href}',alt='#{it.title}')= it.title
                span.time-li-tj= it.time
mixin menu(arr)
    .menu-tj
        each it in arr
            a.item-menu-tj(href='#{it.href}')= it.title
