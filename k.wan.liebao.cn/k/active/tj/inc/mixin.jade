mixin article(obj)
    .article
        .hd-article
            h3.title-article= obj.title
            h4.subtitle-article
                span.part 作者：#{obj.author}
                span.part 时间：#{obj.time}
        .bd-article
            each it in obj.text
                p.text-article!= it
            each it in obj.media
                img.media-article(src='#{uploadP}/#{it.url}')
            each it in obj.subtxt
                p.text-article!= it

mixin banner(imgs)
    -var len=imgs.length
    #banner
        ul#bannerList
            each it,i in imgs
                -var cls=''
                if i==0
                    -cls='active'

                if it.title
                    li.bannerItem(class='#{cls}'): img(src='#{uploadP}/#{it.imgSrc}',title='#{it.title}')
                else
                    li.bannerItem(class='#{cls}'): img(src='#{uploadP}/#{it.imgSrc}')
        ul#bannerBtns
            -var n=0
            while n<len
                -var cls=''
                if n==0
                    -cls='active'
                li.bannerBtn(class='#{cls}')
                -n++